<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/i"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_welcome"
            android:text="Online parking area finder app"
            android:textSize="34sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto_condensed_bold"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/login_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!! Login to continue"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:layout_below="@+id/login_welcome"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/lnl_edit"
            android:layout_marginTop="40dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/lnl_email"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_email"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="3dp"
                        android:text="Enter your username"/>

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_below="@id/text_email"
                        android:layout_marginTop="-5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:textColor="@color/white"
                        android:theme="@style/EditTextThemeWhite"
                        android:gravity="left"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="-5dp"
                        android:alpha="0.3"
                        android:layout_below="@id/edt_email"
                        android:background="@color/white"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/lnl_email"
                android:id="@+id/lnl_password"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="3dp"
                        android:text="Password"
                        android:textColor="@color/white"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:layout_marginLeft="3dp"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/white"
                        android:layout_below="@id/text_password"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:theme="@style/EditTextThemeWhite"
                            android:backgroundTint="@android:color/transparent"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"/>


                    </com.google.android.material.textfield.TextInputLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:alpha="0.3"
                        android:layout_marginTop="-5dp"
                        android:layout_below="@id/layout_password"
                        android:background="@color/white"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relButtons"
            android:layout_below="@id/lnl_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_rounded_sign"
                android:text="LOGIN"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_fb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/btn_sign"
                android:background="@drawable/btn_rounded_fb"
                android:text="LOGIN BY FACEBOOK"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/login_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password??"
                android:fontFamily="@font/roboto_medium"
                android:textSize="10sp"
                android:layout_below="@id/btn_fb"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40dp"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/login_create_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account"
                android:fontFamily="@font/roboto_medium"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="false"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relFooter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/other_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other login?"
                android:fontFamily="@font/roboto_medium"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>